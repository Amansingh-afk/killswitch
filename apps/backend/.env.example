# Server Configuration
PORT=3001
NODE_ENV=development
ENABLE_MONITORING=false
# Database Configuration
# Format: postgresql://user:password@host:port/database?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/killswitch?schema=public"

# Redis Configuration
# Format: redis://host:port
REDIS_URL="redis://localhost:6379"

# JWT Configuration
# Generate a strong random secret for production
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Encryption Key for Dhan Tokens
# Must be exactly 32 characters for AES-256-GCM
# Generate a secure random 32-character string for production
ENCRYPTION_KEY="your-32-character-encryption-key!!"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Dhan API Configuration
DHAN_API_BASE_URL="https://api.dhan.co"
DHAN_API_VERSION="/v2"
